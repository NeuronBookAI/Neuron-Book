{
    // Point to the Python interpreter in the api/.venv folder
    "python.defaultInterpreterPath": "${workspaceFolder}/api/.venv/bin/python",
    
    // Tell Python where to find your modules
    "python.analysis.extraPaths": [
        "${workspaceFolder}/api"
    ],
    
    // Set the working directory for Python terminal
    "terminal.integrated.cwd": "${workspaceFolder}/api",
    
    // Point to .env file in api folder
    "python.envFile": "${workspaceFolder}/api/.env",
    
    // Auto-complete settings
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/api"
    ],
    
    // Linting
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    
    // Exclude unnecessary folders but show .env files
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.env": false
    }
}
